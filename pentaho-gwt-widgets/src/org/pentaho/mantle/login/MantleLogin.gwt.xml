<module rename-to="mantleLogin">

  <!-- Inherit the core Web Toolkit stuff. -->
  <inherits name='com.google.gwt.user.User'/>
  <inherits name='com.google.gwt.xml.XML'/>
  <inherits name='com.google.gwt.i18n.I18N'/>
  <inherits name='org.pentaho.gwt.widgets.Widgets'/>

  <set-property name="gwt.suppressNonStaticFinalFieldWarnings" value="true"/>

  <!-- Specify the app entry point class.                   -->
  <entry-point class='org.pentaho.mantle.login.client.MantleLoginEntryPoint'/>

  <servlet path="/MantleLoginService" class="org.pentaho.mantle.server.DebugMantleServlet"/>

</module>
